extends CharacterBody2D

@onready var animated_sprite_2d: AnimatedSprite2D = $AnimatedSprite2D

func _physics_process(_delta):
		pass
		#detect inpit
		#store variable
			#To move around
		var directionx = Input.get_axis("leftmove","ui_right")
		var directiony = Input.get_axis("ui_left","ui_down")
		
		#animation
		if directionx:
			animated_sprite_2d.play("walk")
		else:
			animated_sprite_2d.play("idle")
			
		var anim = $AnimatedSprite2D
		if 	Input.is_action_pressed("leftmove"): 
			anim.flip_h = true
		if 	Input.is_action_pressed("ui_right"): 
			anim.flip_h = false
		
		#apply to velocity
		velocity.x = directionx * 200
		velocity.y = directiony * 200
		#move
		move_and_slide()
